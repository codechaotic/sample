doctype html
html(lang='en', ng-app='app')
  head
  block meta
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
  block title
    title [Title]
  block pre
    link(href='css/theme.css', rel='stylesheet')
    script(src='js/modernizr.js')

  body
    .row
      .large-12.columns
        .nav-bar.right
          ul.button-group
            li #[a.button(href='/') Home]
            li #[a.button(href='/blog') Blog]
        block header
          h1 [Header]

    .row
      .large-8.large-offset-2.columns(role='content')
        block content
          [Content]

  block post
    script(src='js/angular.js')
    script(src='js/jquery.js')
    script(src='js/foundation.js')
    script(src='js/fastclick.js')
    script(src='js/client.js')
